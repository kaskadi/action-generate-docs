  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaskadi/action-generate-docs/issues"
  },
  "homepage": "https://github.com/kaskadi/action-generate-docs#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "standard": "^14.3.4"
  },
  "nyc": {
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "report-dir": "./coverage"
  },
