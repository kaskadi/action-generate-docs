{
  "name": "action-generate-docs",
  "version": "1.0.0",
  "description": "",
  "main": "action.yml",
  "scripts": {
    "test": "export TEST_ENV=\"true\" && standard --fix && mocha test/*.test.js --require test/mocha-color-setter.js",
